# {{{ PatientDetailInputWindow 
<PatientDetailInputWindow>:
	name: "Patient Input"
	
	BoxLayout:
		orientation: "vertical"
		height: .6

		Button:
			text: "Hamburger Menu"
			on_release:
				app.root.current = 'Patient Display'
				root.manager.transition.direction = "right"

		ScrollView:

			BoxLayout:
				orientation: "vertical"
				size_hint: 1, None
				height: 4000


				Label:
					text: "Name: "
				TextInput:
					id: name
					multiline: False

				Label:
					text: "Dob: "
				TextInput:
					id: dob
					multiline: False

				Label:
					text: "Date of Oth Vaccination"

				TextInput:
					id: dov
					multiline: False

				Label:
					text: "Phone: "
				TextInput:
					id: phone
					multiline: False
			
		Button:
			text: "Submit"
			on_press:
				root.on_press_button(isinstance)
	
# }}}
