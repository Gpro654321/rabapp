# {{{ PatientDetailInputWindow 
<PatientDetailInputWindow>:
	name: "Patient Input"
	
	BoxLayout:
		orientation: "vertical"
		size_hint: 1, .6
		pos_hint: {'top': 1}

		Button:
			text: "Hamburger Menu"
			size_hint: 1, .1
			on_release:
				app.root.current = 'Patient Display'
				root.manager.transition.direction = "right"

		ScrollView:

			BoxLayout:
				orientation: "vertical"
				size_hint: 1, None 
				height: self.minimum_height
				# height: 4000

				TextInput:
					id: name
					hint_text: "Patient Name"
					multiline: False
					size_hint: 1, None 
					height: "20dp"

				TextInput:
					id: dob
					hint_text: "Patient's Date Of Birth"
					multiline: False
					size_hint: 1, None 
					height: "20dp"


				TextInput:
					id: dov
					hint_text: "Date of 0th Vaccination"
					multiline: False
					size_hint: 1, None 
					height: "20dp"


				TextInput:
					id: phone
					hint_text: "Patient's phone number"
					multiline: False
					size_hint: 1, None 
					height: "20dp"
			
		Button:
			text: "Submit"
			size_hint: .3, .1
			pos_hint: {'center_x': 0.5}
			on_press:
				root.on_press_button(isinstance)
	
# }}}
