# {{{ PatientDetailDisplayWindow 

<PatientDetailDisplayWindow>:
	name: "Patient Display"
	MDBoxLayout:
		id: box_layout_1
		orientation: "vertical"

		MDScrollView:
			md_bg_color: app.theme_cls.secondary_text_color

			PatientDetailLabel:
				id: box_layout_2 
				md_bg_color: app.theme_cls.opposite_text_color 
				height: self.minimum_height
		
		MDRectangleFlatButton:
			text: "Back "
			size_hint: 1, .2
			on_release:
				app.root.current = 'Patient Input'
				root.manager.transition.direction = "left"

<PatientDetailLabel>:
	orientation: "vertical"
	size_hint: 1, .8



			

